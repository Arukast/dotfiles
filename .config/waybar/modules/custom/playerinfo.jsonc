{
    "custom/playerinfo": {
        "format": "&lt; {} &gt;",
        "exec": "~/.config/waybar/scripts/playerinfo.sh",
        "escape": true,
        "return-type": "json",
        "interval": 10,
        "tooltip": true,
        "on-click-middle": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-click-left": "playerctl previous"
    }
}