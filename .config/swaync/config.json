{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
	"cssPriority": "user",

  "control-center-width": 440,
  "control-center-height": 900, 
  "control-center-margin-top": 6,
  "control-center-margin-bottom": 6,
  "control-center-margin-right": 6,
  "control-center-margin-left": 0,

  "notification-window-width": 400,
  "notification-body-image-height": 160,
  "notification-body-image-width": 200,

  "timeout": 4,
  "timeout-low": 2,
  "timeout-critical": 6,
  
  "fit-to-screen": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": false,
  "script-fail-notify": true,
  "scripts": {
    "example-script": {
      "exec": "echo 'Do something...'",
      "urgency": "Normal"
    }
  },
  "notification-visibility": {
    "example-name": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    }
  },
  "widgets": [
    "label",         
    "buttons-grid",
    "mpris",
    "volume",
    "backlight",
    "title",     
    "dnd",
    "notifications"
  ],
  "widget-config": {
    "notifications": {
      "vexpand": true
    },
    "label": {
      "text": "Control Center",
      "max-lines": 1
    },
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "mpris": {
      "autohide": false,
      "show-album-art": "always",
      "loop-carousel": true
    },
    "backlight": {
      "device": "amdgpu_bl1",
      "label": "",
      "slider": true
    },
    "volume": {
      "device": "default",
      "label": "",
      "show-per-app": true,     
      "show-per-app-icon": true,
      "show-per-app-label": true,
      "expand-button": true, 
      "collapse-after-expand": true
    },
    "buttons-grid": {
      "buttons-per-row": 5,
      "actions": [
        {
          "label": "󰀝",
          "type": "toggle",
          "command": "~/.config/swaync/scripts/airplane.sh toggle",
          "update-command": "~/.config/swaync/scripts/airplane.sh status",
          "interval": 2
        },
        {
          "label": "",
          "type": "button",
          "command": "~/.config/swaync/scripts/hyprsunset_rofi.sh"
        },
        {
          "label": "󰈈",
          "type": "toggle",
          "command": "sh -c 'pidof hypridle >/dev/null && pkill hypridle || hypridle &'",
          "update-command": "sh -c 'pidof hypridle >/dev/null && echo false || echo true'",
          "interval": 2
        },
        {
          "label": "",
          "type": "toggle",
          "command": "pamixer -t",
          "update-command": "pamixer --get-mute",
          "interval": 1
        },
        {
          "label": "",
          "type": "toggle",
          "command": "pamixer --default-source -t",
          "update-command": "pamixer --default-source --get-mute",
          "interval": 1
        },
        {
          "label": "",
          "type": "button",
          "command": "swaync-client -cp && hyprlock"
        },
        {
          "label": "",
          "type": "button",
          "command": "swaync-client -cp && hyprlock && systemctl suspend"
        },
        {
          "label": "󰍃",
          "type": "button",
          "command": "swaync-client -cp && hyprctl dispatch exit"
        },
        {
          "label": "",
          "type": "button",
          "command": "swaync-client -cp && systemctl reboot"
        },
        {
          "label": "",
          "type": "button",
          "command": "swaync-client -cp && systemctl poweroff"
        }
      ]
    }
  }
}